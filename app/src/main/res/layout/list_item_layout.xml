<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@drawable/gingerbread"
        />

    <TextView
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Item name"
        android:textSize="20sp"
        android:textColor="?attr/cartListItemTextColor"
        android:layout_marginHorizontal="@dimen/start_end_margin_16dp"
        app:layout_constraintTop_toTopOf="@id/item_image"
        app:layout_constraintStart_toEndOf="@id/item_image"
        app:layout_constraintBottom_toTopOf="@id/item_caption"
        app:layout_constraintVertical_chainStyle="packed"/>

    <TextView
        android:id="@+id/item_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/caption"
        android:textSize="12sp"
        android:textColor="?attr/cartListItemTextColor"
        app:layout_constraintBottom_toBottomOf="@id/item_image"
        app:layout_constraintStart_toStartOf="@id/item_title"
        app:layout_constraintTop_toBottomOf="@id/item_title"/>

    <TextView
        android:id="@+id/item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Price"
        android:textColor="?attr/cartListItemTextColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_image"
        app:layout_constraintBottom_toTopOf="@id/remove_button"
        app:layout_constraintVertical_chainStyle="packed"/>

    <ImageButton
        android:id="@+id/remove_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close_16"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/item_price"
        app:layout_constraintEnd_toEndOf="@id/item_price"
        app:layout_constraintBottom_toBottomOf="@id/item_caption"
        />

</androidx.constraintlayout.widget.ConstraintLayout>